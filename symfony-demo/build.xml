<?xml version="1.0" encoding="UTF-8"?>
<project name="demo" default="build" basedir=".">
    <property name="phpunit" value="${application.startdir}/vendor/bin/phpunit"/>
    <target name="build"
            depends="phpunit"
    />

    <target name="phpunit"
            unless="phpunit.done"
            description="Run phpunit">
        <exec executable="${phpunit}" passthru="true"></exec>
        <property name="phpunit.done" value="true"/>
    </target>
</project>
